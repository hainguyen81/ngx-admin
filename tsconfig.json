{
    "compileOnSave": true,
    "compilerOptions": {
        "importHelpers": true,
        "module": "esnext",
        "outDir": "./dist/out-tsc",
        "esModuleInterop": false,
        "allowJs": true,
        "sourceMap": true,
        "strict": false,
        "noImplicitThis": false,
        "noEmit": false,
        "noImplicitAny": false,
        "noErrorTruncation": true,
        "declaration": false,
        "moduleResolution": "node",
        "jsx": "react",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "pretty": true,
        "target": "es2015",
        "typeRoots": [
            "./node_modules/@types",
            "./src/app/@types"
        ],
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        // TODO true for importing moment
        // TODO to fix [error TS2349: Cannot invoke an expression whose type lacks a call signature.
        // TODO         Type 'typeof moment' has no compatible call signatures.]
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": false,
        "declarationMap": false
    },
    "angularCompilerOptions": {
        "enableIvy": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "annotateForClosureCompiler": false,
        // TODO fix ERROR No NgModule metadata found for 'AppModule'
        "strictMetadataEmit": false,
        "enableResourceInlining": true,
        "fullTemplateTypeCheck": true,
        "preserveWhitespaces": true,
        "strictInjectionParameters": true,
        "allowEmptyCodegenFiles": true
    },
    "exclude": [
        "bin",
        "dist",
        "node_modules"
    ],
    "typeAcquisition": {
        "enable": true
    }
}
