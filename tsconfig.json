{
    "compileOnSave": true,
    "compilerOptions": {
        "importHelpers": true,
        "module": "esnext",
        "outDir": "./dist/out-tsc",
        "esModuleInterop": false,
        "allowJs": true,
        "sourceMap": true,
        "strict": false,
        "noImplicitThis": false,
        "noEmit": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "skipLibCheck": true,
        // TODO true for importing moment
        // TODO to fix [error TS2349: Cannot invoke an expression whose type lacks a call signature.
        // TODO         Type 'typeof moment' has no compatible call signatures.]
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true
    }
}
